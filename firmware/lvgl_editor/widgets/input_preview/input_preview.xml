<widget>
	<api>
		<prop name="size" type="int" default="80px" help="Widget size" />
		<prop name="x" type="int" default="50" help="x proportion" />
		<prop name="y" type="int" default="50" help="y proportion" />
		<prop name="deadzone" type="int" default="0" />
		<prop name="active" type="bool" default="false" />
		<prop name="thickness" type="px" default="4px" />
	</api>
	<previews>
		<preview style_bg_color="0x000000" />
	</previews>
	<view height="100px" width="100px">
		<!-- midlines -->
		<lv_obj
			height="4px"
			width="100px"
			style_bg_color="0xb94040"
			align="center"
			style_bg_opa="100%"
			style_border_width="0px"
			style_radius="0px"
		/>
		<lv_obj
			height="100px"
			width="4px"
			style_bg_color="0xb94040"
			align="center"
			style_bg_opa="100%"
			style_border_width="0px"
			style_radius="0px"
		/>
		<!-- main -->
		<lv_obj
			width="100px"
			height="100px"
			style_radius="50%"
			style_border_width="4px"
			style_border_color="0x4e4e4e"
			align="center"
			style_bg_opa="0%"
		/>

		<!-- deadzone -->
		<lv_obj
			width="40%"
			height="40%"
			style_border_color="0x00e6ff"
			style_border_width="2px"
			style_bg_opa="0"
			style_radius="50%"
			align="center"
		/>
		<!-- indicator -->
		<lv_obj
			height="20px"
			width="20px"
			align="center"
			style_border_width="0px"
			style_bg_opa="0%"
			style_pad_all="0px"
		>
			<lv_obj
				height="100%"
				width="4px"
				style_bg_color="0xffffff"
				align="center"
				style_bg_opa="100%"
				style_border_width="0px"
			/>
			<lv_obj
				height="4px"
				width="100%"
				style_bg_color="0xffffff"
				align="center"
				style_bg_opa="100%"
				style_border_width="0px"
			/>
		</lv_obj>
	</view>
</widget>
