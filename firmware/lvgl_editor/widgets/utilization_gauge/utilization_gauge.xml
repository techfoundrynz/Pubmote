<component>
	<api>
		<prop name="bind_duty_cycle" type="subject" />
	</api>
	<consts>
		<px name="thickness" value="24px" />
	</consts>
	<previews>
		<preview style_pad_all="20" style_bg_color="0x000000" />
	</previews>
	<styles>
		<style name="style_main" arc_width="#thickness" arc_color="0x545454" width="100%" height="100%" />
		<style name="style_indicator" arc_color="#settings_theme_color" arc_width="#thickness" />
		<style name="style_knob" opa="0%" />
	</styles>
	<view extends="lv_arc" min_value="0" max_value="100" start_angle="120" end_angle="60" disabled="true">
		<style name="style_main" />
		<style name="style_knob" selector="knob" />
		<style name="style_indicator" selector="indicator" />
	</view>
</component>
