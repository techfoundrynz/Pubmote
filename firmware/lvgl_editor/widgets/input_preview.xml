<widget>
	<api>
		<prop name="size" type="int" default="80px" help="Widget size" />
		<prop name="x" type="int" default="50" help="x proportion" />
		<prop name="y" type="int" default="50" help="y proportion" />
		<prop name="deadzone" type="int" default="0" />
		<prop name="active" type="bool" default="false" />
		<prop name="thickness" type="px" default="4px" />
	</api>
	<previews />
	<view>
		<remove_style_all />
		<lv_obj
			width="90%"
			height="90%"
			style_border_width="4px"
			style_border_color="0x000000"
			style_radius="50%"
			align="center"
		/>
		<!-- midlines -->
		<lv_obj height="4px" width="100%" style_bg_color="0xEE4266" align="center" />
		<lv_obj height="100%" width="4px" style_bg_color="0xEE4266" align="center" />
		<!-- deadzone -->
		<lv_obj
			width="40%"
			height="40%"
			style_border_color="0x414141"
			style_border_width="4px"
			style_bg_opa="0"
			style_radius="50%"
			align="center"
		/>
		<!-- indicator -->
		<lv_obj height="20%" width="20%" align="center" style_border_width="0px" style_bg_opa="0">
			<lv_obj height="20%" width="4px" style_bg_color="0xff0000" align="center" />
			<lv_obj height="4px" width="20%" style_bg_color="0xff0000" align="center" />
		</lv_obj>
	</view>
</widget>
