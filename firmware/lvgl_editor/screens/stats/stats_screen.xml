<screen permanent="true">
	<styles>
		<style name="style_battery_gauge" width="15%" height="35%" />
	</styles>
	<view style_bg_color="#theme_bg">
		<event_cb trigger="screen_load_start" callback="stats_screen_load_start_cb" />
		<event_cb trigger="screen_loaded" callback="stats_screen_loaded_cb" />
		<event_cb trigger="screen_unload_start" callback="stats_screen_unload_start_cb" />
		<event_cb trigger="screen_unloaded" callback="stats_screen_unloaded_cb" />
		<!-- <event_cb trigger="gesture" callback="stats_screen_gesture_cb" /> -->
		<!-- <screen_create_event screen="menu_screen" trigger="gesture" anim_type="move_left" duration="200" /> -->
		<div
			width="100%"
			height="100%"
			scrollable="false"
			flex_flow="column"
			style_flex_main_place="center"
			style_flex_cross_place="center"
			style_flex_track_place="center"
			style_pad_top="80px"
			style_pad_bottom="20px"
			style_pad_hor="65px"
		>
			<div
				flex_flow="column"
				style_flex_main_place="start"
				style_flex_cross_place="center"
				style_flex_track_place="center"
				height="20%"
			>
				<battery_gauge bind_percent="state_battery_percent" bind_charge_state="state_battery_status">
					<style name="style_battery_gauge" />
				</battery_gauge>
			</div>
			<div
				flex_flow="column"
				style_flex_main_place="center"
				style_flex_cross_place="center"
				style_flex_track_place="center"
				height="60%"
			>
				<dynamic_fmt_label
					bind_text="state_speed"
					bind_text_fmt="state_speed_fmt"
					style_text_color="#theme_text"
					style_text_font="inter_bold_96"
					overflow_visible="true"
					width="100%"
					style_text_align="center"
					align="center"
					style_pad_top="-25px"
				>
					<lv_label
						bind_text="settings_speed_label"
						style_text_color="#theme_structure4"
						style_text_font="inter_bold_24"
						x="-30px"
						y="-20px"
						align="bottom_right"
					/>
				</dynamic_fmt_label>
				<lv_label
					bind_text="state_connection_state_label"
					style_text_color="#theme_text"
					style_text_font="inter_24"
				>
					<bind_flag_if_not_eq subject="state_connection_state" ref_value="0" flag="hidden" />
				</lv_label>
				<lv_label
					bind_text="state_connection_state_label"
					style_text_color="#theme_text"
					style_text_font="inter_24"
				>
					<bind_flag_if_not_eq subject="state_connection_state" ref_value="2" flag="hidden" />
				</lv_label>
				<horizontal_pager>
					<bind_flag_if_not_eq subject="state_connection_state" ref_value="1" flag="hidden" />
					<horizontal_page height="content">
						<lv_label
							bind_text="state_duty_cycle"
							bind_text-fmt="%d%% Duty Cycle"
							style_text_color="#theme_text"
							style_text_font="inter_24"
						/>
					</horizontal_page>
					<horizontal_page height="content">
						<lv_label
							bind_text="state_motor_temp"
							bind_text-fmt="M: %.1f | C: %.1f"
							style_text_color="#theme_text"
							style_text_font="inter_24"
						/>
					</horizontal_page>
				</horizontal_pager>
			</div>
			<div
				flex_flow="column"
				style_flex_main_place="end"
				style_flex_cross_place="center"
				style_flex_track_place="center"
				height="20%"
			>
				<label text="0%" style_text_font="inter_24" />
			</div>
		</div>

		<speed_gauge bind_speed="state_speed" bind_max_speed="state_max_speed" />
		<utilization_gauge
			bind_duty_cycle="state_duty_cycle"
			bind_vehicle_state="state_vehicle_state"
			style_pad_all="40px"
		/>
		<footpad_indicator bind_left_active="state_adc1_active" bind_right_active="state_adc2_active" />
	</view>
</screen>
