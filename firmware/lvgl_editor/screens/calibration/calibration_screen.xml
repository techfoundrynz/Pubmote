<screen permanent="false">
	<view
		style_bg_color="#theme_bg"
		width="100%"
		height="100%"
		scrollable="false"
		flex_flow="column"
		style_flex_main_place="space_between"
		style_flex_cross_place="center"
		style_flex_track_place="center"
		style_pad_all="0px"
	>
		<event_cb trigger="screen_load_start" callback="calibration_screen_load_start_cb" />
		<event_cb trigger="screen_loaded" callback="calibration_screen_loaded_cb" />
		<event_cb trigger="screen_unload_start" callback="calibration_screen_unload_start_cb" />
		<event_cb trigger="screen_unloaded" callback="calibration_screen_unloaded_cb" />
		<header>
			<h1 text="Calibration" />
			<label text="X:0 | Y:0" />
		</header>
		<body>
			<input_visualization active="false" x="0%" y="0%" deadzone="40%" width="150px" height="150px" />
		</body>
		<footer>
			<label text="Press start to begin calibration" />
			<footer_buttons>
				<button width="80px" label="Cancel">
					<screen_create_event screen="menu_screen" trigger="clicked" anim_type="move_right" duration="200" />
				</button>
				<button width="80px" label="Start">
					<screen_create_event screen="menu_screen" trigger="clicked" anim_type="move_right" duration="200" />
				</button>
			</footer_buttons>
		</footer>
	</view>
</screen>
