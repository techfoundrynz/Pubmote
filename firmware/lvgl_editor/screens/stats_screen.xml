<screen permanent="true">
	<view style_bg_color="0x000000">
		<speed_gauge
			start_angle="120"
			end_angle="60"
			disabled="true"
			min_value="0"
			max_value="100"
			bind_value="speed"
		/>
		<utilization_gauge
			start_angle="120"
			end_angle="60"
			disabled="true"
			min_value="0"
			max_value="100"
			bind_value="duty_cycle"
			style_pad_all="40px"
		/>
		<div
			width="100%"
			height="100%"
			scrollable="false"
			flex_flow="column"
			style_flex_main_place="center"
			style_flex_cross_place="center"
			style_flex_track_place="center"
			style_pad_top="78px"
			style_pad_bottom="20px"
			style_pad_hor="48px"
		>
			<div
				flex_flow="column"
				style_flex_main_place="start"
				style_flex_cross_place="center"
				style_flex_track_place="center"
				height="20%"
			>
				<battery_gauge />
			</div>
			<div
				flex_flow="column"
				style_flex_main_place="center"
				style_flex_cross_place="center"
				style_flex_track_place="center"
				height="60%"
			>
				<lv_label
					bind_text="speed"
					style_text_color="0xFFFFFF"
					style_text_font="inter_bold_72"
					overflow_visible="true"
				>
					<lv_label
						bind_text="settings_speed_label"
						style_text_color="0xa9a9a9"
						style_text_font="inter_bold_24"
						align="bottom_right"
						style_translate_x="40px"
						style_translate_y="-15px"
					/>
				</lv_label>

				<lv_label bind_text="duty_cycle" bind_text-fmt="%d%% Duty Cycle" style_text_color="0xFFFFFF" />
			</div>
			<div
				flex_flow="column"
				style_flex_main_place="end"
				style_flex_cross_place="center"
				style_flex_track_place="center"
				height="20%"
			>
				<lv_label text="0%" style_text_color="0xFFFFFF" />
			</div>
		</div>
	</view>
</screen>
