<screen permanent="true">
	<styles>
		<style name="arc_main" help="What is this style about?" arc_width="32px" width="100%" height="100%" />
		<style name="arc_indicator" help="What is this style about?" arc_width="32px" />
		<style name="arc_knob" help="What is this style about?" bg_opa="0" />
	</styles>
	<view style_bg_color="0x000000">
		<lv_arc start_angle="120" end_angle="60" disabled="true" min_value="0" max_value="100" value="50">
			<style name="arc_main" selector="main" />
			<style name="arc_indicator" selector="indicator" />
			<style name="arc_knob" selector="knob" />
		</lv_arc>
		<lv_arc
			start_angle="120"
			end_angle="60"
			disabled="true"
			min_value="0"
			max_value="100"
			value="50"
			style_pad_all="40px"
		>
			<style name="arc_main" selector="main" />
			<style name="arc_indicator" selector="indicator" />
			<style name="arc_knob" selector="knob" />
		</lv_arc>
		<div
			width="100%"
			height="100%"
			scrollable="false"
			flex_flow="column"
			style_flex_main_place="center"
			style_flex_cross_place="center"
			style_flex_track_place="center"
			style_pad_top="50px"
			style_pad_bottom="50px"
			style_pad_hor="48px"
		>
			<div
				flex_flow="column"
				style_flex_main_place="center"
				style_flex_cross_place="center"
				style_flex_track_place="center"
				height="20%"
			>
				<lv_label text="header" />
			</div>
			<div
				flex_flow="column"
				style_flex_main_place="center"
				style_flex_cross_place="center"
				style_flex_track_place="center"
				height="60%"
			>
				<lv_label text="45KPH" style_text_font="geist_semibold_28" />
				<lv_label text="25% Duty Cycle" />
			</div>
			<div
				flex_flow="column"
				style_flex_main_place="center"
				style_flex_cross_place="center"
				style_flex_track_place="center"
				height="20%"
			>
				<lv_label text="footer" />
			</div>
		</div>
	</view>
</screen>
