<screen permanent="true">
	<view style_bg_color="0x000000">
		<speed_gauge bind_speed="state_speed" bind_max_speed="state_speed" />
		<utilization_gauge bind_duty_cycle="state_duty_cycle" style_pad_all="40px" />
		<div
			width="100%"
			height="100%"
			scrollable="false"
			flex_flow="column"
			style_flex_main_place="center"
			style_flex_cross_place="center"
			style_flex_track_place="center"
			style_pad_top="78px"
			style_pad_bottom="20px"
			style_pad_hor="48px"
		>
			<div
				flex_flow="column"
				style_flex_main_place="start"
				style_flex_cross_place="center"
				style_flex_track_place="center"
				height="20%"
			>
				<battery_gauge bind_percent="state_battery_percent" bind_charge_state="state_battery_charging" />
			</div>
			<div
				flex_flow="column"
				style_flex_main_place="center"
				style_flex_cross_place="center"
				style_flex_track_place="center"
				height="60%"
			>
				<lv_label
					bind_text="state_speed"
					style_text_color="0xFFFFFF"
					style_text_font="inter_bold_72"
					overflow_visible="true"
				/>
				<lv_label
					bind_text="settings_speed_label"
					style_text_color="0xa9a9a9"
					style_text_font="inter_bold_24"
					style_x="40px"
					style_y="25px"
				/>

				<lv_label bind_text="state_duty_cycle" bind_text-fmt="%d%% Duty Cycle" style_text_color="0xFFFFFF" />
			</div>
			<div
				flex_flow="column"
				style_flex_main_place="end"
				style_flex_cross_place="center"
				style_flex_track_place="center"
				height="20%"
			>
				<lv_label text="0%" style_text_color="0xFFFFFF" />
			</div>
		</div>
	</view>
</screen>
