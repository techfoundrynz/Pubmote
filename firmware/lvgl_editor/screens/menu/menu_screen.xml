<screen permanent="false">
	<view style_bg_color="0x000000">
		<div
			scrollable="false"
			flex_flow="column"
			style_flex_main_place="start"
			style_flex_cross_place="center"
			style_flex_track_place="center"
			style_pad_row="#unit_md"
			style_pad_hor="100px"
			style_pad_ver="64px"
			flex_grow="1"
			scroll_snap_y="center"
			scroll_one="true"
		>
			<event_cb trigger="screen_load_start" callback="menu_screen_load_start_cb" />
			<event_cb trigger="screen_loaded" callback="menu_screen_loaded_cb" />
			<event_cb trigger="screen_unload_start" callback="menu_screen_unload_start_cb" />
			<event_cb trigger="screen_unloaded" callback="menu_screen_unloaded_cb" />
			<button label="Back" height="64px">
				<screen_load_event screen="stats_screen" trigger="clicked" anim_type="over_top" duration="200" />
			</button>
			<button label="Enable Pocket Mode" height="64px" />
			<button label="Settings" height="64px">
				<screen_create_event screen="settings_screen" trigger="clicked" anim_type="move_left" duration="200" />
			</button>
			<button label="Calibration" height="64px">
				<screen_create_event
					screen="calibration_screen"
					trigger="clicked"
					anim_type="move_left"
					duration="200"
				/>
			</button>
			<button label="Pairing" height="64px">
				<screen_create_event screen="pairing_screen" trigger="clicked" anim_type="move_left" duration="200" />
			</button>
			<button label="About" height="64px">
				<screen_create_event screen="about_screen" trigger="clicked" anim_type="move_left" duration="200" />
			</button>
			<button label="Shutdown" height="64px" />
		</div>
	</view>
</screen>
