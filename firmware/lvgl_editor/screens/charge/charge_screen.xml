<screen permanent="false">
	<styles>
		<style name="charge_arc_main" arc_width="24" arc_rounded="false" arc_color="#theme_structure2" />
		<style name="charge_arc_indicator" arc_width="24" arc_rounded="false" arc_color="#settings_theme_color" />
		<style name="charge_arc_knob" bg_opa="0" />
	</styles>
	<view style_bg_color="#theme_bg">
		<event_cb trigger="screen_load_start" callback="charge_screen_load_start_cb" />
		<event_cb trigger="screen_loaded" callback="charge_screen_loaded_cb" />
		<event_cb trigger="screen_unload_start" callback="charge_screen_unload_start_cb" />
		<event_cb trigger="screen_unloaded" callback="charge_screen_unloaded_cb" />
		<lv_arc
			style_arc_width="24"
			width="100%"
			height="100%"
			min_value="0"
			max_value="100"
			bind_value="state_battery_percent"
			start_angle="89"
			end_angle="89"
			bg_start_angle="90"
			bg_end_angle="89"
			disabled="true"
		>
			<style name="charge_arc_main" selector="default" />
			<style name="charge_arc_indicator" selector="indicator" />
			<style name="charge_arc_knob" selector="knob" />
		</lv_arc>
		<div
			width="100%"
			height="100%"
			scrollable="false"
			flex_flow="column"
			style_flex_main_place="center"
			style_flex_cross_place="center"
			style_flex_track_place="center"
			style_pad_row="#unit_sm"
		>
			<lv_label text="Charging" style_text_color="#theme_text" style_text_font="inter_bold_24" />
			<lv_label
				bind_text="state_battery_percent"
				bind_text-fmt="%d%%"
				style_text_color="#theme_text"
				style_text_font="inter_24"
			/>
		</div>
	</view>
</screen>
