<screen permanent="false">
	<view
		style_bg_color="0x000000"
		width="100%"
		height="100%"
		scrollable="false"
		flex_flow="column"
		style_flex_main_place="space_between"
		style_flex_cross_place="center"
		style_flex_track_place="center"
		style_pad_all="20px"
	>
		<header>
			<h1 text="Settings" />
		</header>
		<div
			style_flex_main_place="start"
			style_flex_track_place="center"
			style_flex_cross_place="center"
			scrollable="true"
			scroll_snap_x="center"
			scrollbar_mode="off"
			flex_flow="row"
			height="55%"
			width="100%"
			scroll_one="true"
		>
			<div
				width="100%"
				height="100%"
				flex_flow="column"
				style_flex_main_place="center"
				style_flex_track_place="center"
				style_flex_cross_place="center"
				style_pad_row="20px"
			>
				<slider min_value="0" max_value="100" style_width="80%" />
				<label text="Screen brightness" />
			</div>
			<div
				width="100%"
				height="100%"
				flex_flow="column"
				style_flex_main_place="center"
				style_flex_track_place="center"
				style_flex_cross_place="center"
				style_pad_row="20px"
			>
				<lv_dropdown options="aaa" />
				<label text="Double press action" />
			</div>
			<div
				width="100%"
				height="100%"
				flex_flow="column"
				style_flex_main_place="center"
				style_flex_track_place="center"
				style_flex_cross_place="center"
				style_pad_row="20px"
			>
				<lv_dropdown options="0 Deg" />
				<label text="Screen rotation" />
			</div>
			<div
				width="100%"
				height="100%"
				flex_flow="column"
				style_flex_main_place="center"
				style_flex_track_place="center"
				style_flex_cross_place="center"
				style_pad_row="20px"
			>
				<lv_dropdown options="Disabled" />
				<label text="Auto-off time" />
			</div>
			<div
				width="100%"
				height="100%"
				flex_flow="column"
				style_flex_main_place="center"
				style_flex_track_place="center"
				style_flex_cross_place="center"
				style_pad_row="20px"
			>
				<lv_dropdown options="Celcius" />
				<label text="Temp units" />
			</div>
			<div
				width="100%"
				height="100%"
				flex_flow="column"
				style_flex_main_place="center"
				style_flex_track_place="center"
				style_flex_cross_place="center"
				style_pad_row="20px"
			>
				<lv_dropdown options="Kilometers" />
				<label text="Distance units" />
			</div>
			<div
				width="100%"
				height="100%"
				flex_flow="column"
				style_flex_main_place="center"
				style_flex_track_place="center"
				style_flex_cross_place="center"
				style_pad_row="20px"
			>
				<lv_dropdown options="None" />
				<label text="Startup sound" />
			</div>
			<div
				width="100%"
				height="100%"
				flex_flow="column"
				style_flex_main_place="center"
				style_flex_track_place="center"
				style_flex_cross_place="center"
				style_pad_row="20px"
			>
				<label text="Theme color" />
			</div>
			<div
				width="100%"
				height="100%"
				flex_flow="column"
				style_flex_main_place="center"
				style_flex_track_place="center"
				style_flex_cross_place="center"
				style_pad_row="20px"
			>
				<switch />
				<label text="Dark text" />
			</div>
		</div>
		<footer>
			<footer_buttons>
				<button width="80px" label="Cancel">
					<screen_create_event screen="menu_screen" trigger="clicked" anim_type="move_right" duration="200" />
				</button>
				<button_primary width="80px" label="Save">
					<screen_create_event screen="menu_screen" trigger="clicked" anim_type="move_right" duration="200" />
				</button_primary>
			</footer_buttons>
		</footer>
	</view>
</screen>
