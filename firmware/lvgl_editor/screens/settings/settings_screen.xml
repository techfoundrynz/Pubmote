<screen permanent="false">
	<styles>
		<style name="style_dropdown" width="50%" />
	</styles>
	<view
		style_bg_color="0x000000"
		width="100%"
		height="100%"
		scrollable="false"
		flex_flow="column"
		style_flex_main_place="space_between"
		style_flex_cross_place="center"
		style_flex_track_place="center"
		style_pad_all="20px"
	>
		<event_cb trigger="screen_load_start" callback="settings_screen_load_start_cb" />
		<event_cb trigger="screen_loaded" callback="settings_screen_loaded_cb" />
		<event_cb trigger="screen_unload_start" callback="settings_screen_unload_start_cb" />
		<event_cb trigger="screen_unloaded" callback="settings_screen_unloaded_cb" />
		<header>
			<h1 text="Settings" />
		</header>
		<div
			style_flex_main_place="start"
			style_flex_track_place="center"
			style_flex_cross_place="center"
			scrollable="true"
			scroll_snap_x="center"
			scrollbar_mode="off"
			flex_flow="row"
			height="55%"
			width="100%"
			scroll_one="true"
		>
			<settings_screen_page>
				<slider name="screen_brightness_slider" min_value="0" max_value="100" style_width="70%" />
				<event_cb trigger="value_changed" callback="settings_screen_brightness_slider_change_cb" />
				<label text="Screen brightness" />
			</settings_screen_page>
			<settings_screen_page>
				<lv_dropdown name="double_press_action_dropdown">
					<event_cb
						trigger="value_changed"
						callback="settings_screen_double_press_action_dropdown_change_cb"
					/>
					<style name="style_dropdown" />
				</lv_dropdown>
				<label text="Double press action" />
			</settings_screen_page>
			<settings_screen_page>
				<lv_dropdown name="screen_rotation_dropdown">
					<event_cb trigger="value_changed" callback="settings_screen_screen_rotation_dropdown_change_cb" />
					<style name="style_dropdown" />
				</lv_dropdown>
				<label text="Screen rotation" />
			</settings_screen_page>
			<settings_screen_page>
				<lv_dropdown name="shutdown_time_dropdown">
					<event_cb trigger="value_changed" callback="settings_screen_shutdown_time_dropdown_change_cb" />
					<style name="style_dropdown" />
				</lv_dropdown>
				<label text="Auto-off time" />
			</settings_screen_page>
			<settings_screen_page>
				<lv_dropdown name="temp_units_dropdown">
					<event_cb trigger="value_changed" callback="settings_screen_temp_units_dropdown_change_cb" />
					<style name="style_dropdown" />
				</lv_dropdown>
				<label text="Temp units" />
			</settings_screen_page>
			<settings_screen_page>
				<lv_dropdown name="distance_units_dropdown">
					<event_cb trigger="value_changed" callback="settings_screen_distance_units_dropdown_change_cb" />
					<style name="style_dropdown" />
				</lv_dropdown>
				<label text="Distance units" />
			</settings_screen_page>
			<settings_screen_page>
				<lv_dropdown name="startup_sound_dropdown">
					<event_cb trigger="value_changed" callback="settings_screen_startup_sound_dropdown_change_cb" />
					<style name="style_dropdown" />
				</lv_dropdown>
				<label text="Startup sound" />
			</settings_screen_page>
			<settings_screen_page>
				<label text="Theme color" />
			</settings_screen_page>
			<settings_screen_page>
				<switch bind_checked="settings_dark_text">
					<subject_toggle_event subject="settings_dark_text" trigger="clicked" />
				</switch>
				<label text="Dark text" />
			</settings_screen_page>
		</div>
		<footer>
			<footer_buttons>
				<button width="80px" label="Cancel">
					<event_cb trigger="clicked" callback="settings_screen_cancel_cb" />
					<screen_create_event screen="menu_screen" trigger="clicked" anim_type="move_right" duration="200" />
				</button>
				<button_primary width="80px" label="Save">
					<event_cb trigger="clicked" callback="settings_screen_save_cb" />
					<screen_create_event screen="menu_screen" trigger="clicked" anim_type="move_right" duration="200" />
				</button_primary>
			</footer_buttons>
		</footer>
	</view>
</screen>
