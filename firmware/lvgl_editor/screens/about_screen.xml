<screen permanent="false">
	<view
		style_bg_color="0x000000"
		width="100%"
		height="100%"
		scrollable="false"
		flex_flow="column"
		style_flex_main_place="space_between"
		style_flex_cross_place="center"
		style_flex_track_place="center"
	>
		<header text="About" />
		<body>
			<lv_label text="v1.2.0" style_text_color="0xFFFFFF" />
			<button label="Check for updates" width="50%">
				<screen_create_event screen="update_screen" trigger="clicked" anim_type="move_left" duration="200" />
			</button>
		</body>
		<footer text="">
			<footer_buttons>
				<button width="80px" label="Back">
					<screen_create_event screen="menu_screen" trigger="clicked" anim_type="move_right" duration="200" />
				</button>
			</footer_buttons>
		</footer>
	</view>
</screen>
