<screen permanent="false">
	<view
		style_bg_color="0x000000"
		width="100%"
		height="100%"
		scrollable="false"
		flex_flow="column"
		style_flex_main_place="space_between"
		style_flex_cross_place="center"
		style_flex_track_place="center"
	>
		<event_cb trigger="screen_load_start" callback="about_screen_load_start_cb" />
		<event_cb trigger="screen_loaded" callback="about_screen_loaded_cb" />
		<event_cb trigger="screen_unload_start" callback="about_screen_unload_start_cb" />
		<event_cb trigger="screen_unloaded" callback="about_screen_unloaded_cb" />
		<header>
			<h1 text="About" />
		</header>
		<body>
			<label text="Version: unknown" />
			<label text="Type: uknown" />
			<label text="Hash: unknown" />
			<button_outlined label="Check for updates" width="content">
				<screen_create_event screen="update_screen" trigger="clicked" anim_type="move_left" duration="200" />
			</button_outlined>
		</body>
		<footer>
			<footer_buttons>
				<button width="80px" label="Back">
					<screen_create_event screen="menu_screen" trigger="clicked" anim_type="move_right" duration="200" />
				</button>
			</footer_buttons>
		</footer>
	</view>
</screen>
