<screen permanent="false">
	<view
		style_bg_color="0x000000"
		width="100%"
		height="100%"
		scrollable="false"
		flex_flow="column"
		style_flex_main_place="space_between"
		style_flex_cross_place="center"
		style_flex_track_place="center"
		style_pad_all="20px"
	>
		<event_cb trigger="screen_load_start" callback="update_screen_load_start_cb" />
		<event_cb trigger="screen_loaded" callback="update_screen_loaded_cb" />
		<event_cb trigger="screen_unload_start" callback="update_screen_unload_start_cb" />
		<event_cb trigger="screen_unloaded" callback="update_screen_unloaded_cb" />
		<header>
			<h1 text="Update" />
		</header>
		<body>
			<lv_label text="Press next to begin" style_text_color="0xFFFFFF" />
		</body>
		<footer>
			<footer_buttons>
				<button width="80px" label="Cancel">
					<screen_create_event
						screen="about_screen"
						trigger="clicked"
						anim_type="move_right"
						duration="200"
					/>
				</button>
				<button_primary width="80px" label="Next" />
			</footer_buttons>
		</footer>
	</view>
</screen>
