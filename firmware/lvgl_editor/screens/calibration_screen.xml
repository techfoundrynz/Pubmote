<screen permanent="false">
	<view
		style_bg_color="0x000000"
		width="100%"
		height="100%"
		scrollable="false"
		flex_flow="column"
		style_flex_main_place="space_between"
		style_flex_cross_place="center"
		style_flex_track_place="center"
		style_pad_all="20px"
	>
		<header>
			<h1 text="Calibration" />
			<label text="X:0 | Y:0" />
		</header>
		<body>
			<input_preview size="200px" />
		</body>
		<footer>
			<label text="Press start to begin calibration" />
			<footer_buttons>
				<button width="80px" label="Cancel">
					<screen_create_event screen="menu_screen" trigger="clicked" anim_type="move_right" duration="200" />
				</button>
				<button width="80px" label="Start">
					<screen_create_event screen="menu_screen" trigger="clicked" anim_type="move_right" duration="200" />
				</button>
			</footer_buttons>
		</footer>
	</view>
</screen>
