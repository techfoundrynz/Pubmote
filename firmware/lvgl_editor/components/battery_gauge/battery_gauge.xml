<component>
	<api>
		<prop name="width" type="px" default="80px" help="Widget width" />
		<prop name="height" type="px" default="80px" help="Widget height" />
		<prop name="bind_percent" type="subject" help="Percentage fill" />
		<prop name="bind_charge_state" type="subject" />
	</api>
	<previews>
		<preview style_bg_color="0x000000" />
	</previews>
	<view width="100px" height="40px" style_bg_opa="0">
		<lv_obj
			width="95px"
			height="40px"
			style_border_width="4px"
			style_border_color="0xffffff"
			style_bg_opa="0%"
			style_radius="5px"
			style_pad_all="0px"
		>
			<lv_obj
				style_radius="0px"
				style_bg_color="0x42ca00"
				height="100%"
				width="100%"
				style_bg_opa="100%"
				style_border_width="0px"
				align="left_mid"
			/>
		</lv_obj>
		<!-- tip -->
		<lv_obj
			width="5px"
			height="15px"
			style_bg_color="0xFFFFFF"
			align="right_mid"
			style_border_width="0px"
			style_radius="0px"
		/>
	</view>
</component>
