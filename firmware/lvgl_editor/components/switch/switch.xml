<component>
	<api>
		<prop name="switched" type="subject" />
	</api>
	<previews>
		<preview style_bg_color="0x000000" />
	</previews>
	<styles>
		<style name="switch_knob" pad_all="-4" shadow_opa="0" bg_color="#bg_primary_light" />
		<style name="switch_main" bg_color="#settings_theme_color" bg_opa="30" />
		<style name="switch_indicator" bg_color="#settings_theme_color" />
	</styles>
	<view extends="lv_switch" width="50" height="30" bind_checked="$switched">
		<style name="switch_knob" selector="knob" />
		<style name="switch_main" selector="main" />
		<style name="switch_indicator" selector="indicator|checked" />
	</view>
</component>
