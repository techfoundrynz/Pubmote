<component>
	<api>
		<prop name="bind_left_active" type="subject" />
		<prop name="bind_right_active" type="subject" />
	</api>
	<consts>
		<px name="thickness" value="14px" />
	</consts>
	<previews>
		<preview style_pad_all="20" style_bg_color="0x000000" />
	</previews>
	<styles>
		<style name="style_main" width="100%" height="100%" />
		<style
			name="style_arc"
			arc_width="#thickness"
			arc_color="#theme_structure2"
			width="100%"
			height="100%"
			arc_rounded="true"
		/>
		<style name="style_indicator" arc_color="#settings_theme_color" arc_width="#thickness" arc_rounded="true" />
		<style name="style_knob" opa="0%" />
	</styles>
	<view>
		<remove_style_all />
		<style name="style_main" />
		<lv_arc
			min_value="0"
			start_angle="93"
			bg_start_angle="93"
			end_angle="105"
			bg_end_angle="105"
			disabled="true"
			max_value="1"
			bind_value="$bind_left_active"
		>
			<style name="style_arc" />
			<style name="style_knob" selector="knob" />
			<style name="style_indicator" selector="indicator" />
		</lv_arc>
		<lv_arc
			min_value="0"
			start_angle="75"
			bg_start_angle="75"
			end_angle="87"
			bg_end_angle="87"
			disabled="true"
			max_value="1"
			bind_value="$bind_right_active"
		>
			<style name="style_arc" />
			<style name="style_knob" selector="knob" />
			<style name="style_indicator" selector="indicator" />
		</lv_arc>
	</view>
</component>
