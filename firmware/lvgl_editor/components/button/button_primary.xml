<component>
	<previews>
		<preview style_pad_all="4" style_bg_color="0x000000" />
	</previews>
	<api>
		<prop name="label" type="string" default="Label" />
	</api>
	<styles>
		<style name="style_base" bg_opa="100%" bg_color="#settings_theme_color" text_color="#theme_text" />
		<style name="style_pressed" recolor_opa="#opa_muted" recolor="#settings_theme_color" />
	</styles>
	<view extends="button" label="$label">
		<style name="style_base" />
		<style name="style_pressed" selector="pressed" />
	</view>
</component>
