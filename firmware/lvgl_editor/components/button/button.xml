<component>
	<previews>
		<preview style_pad_all="4" style_bg_color="0x000000" />
	</previews>
	<api>
		<prop name="label" type="string" default="Label" help="The text to be displayed on the button" />
	</api>
	<styles>
		<style
			name="style_base"
			radius="#unit_md"
			bg_opa="100%"
			width="content"
			pad_hor="#unit_sm"
			pad_ver="#unit_sm"
			text_font="#theme_default_button_font"
			bg_color="#surface_primary_light"
			text_color="#text_on_surface_primary_light"
			min_height="40px"
		/>
		<style name="style_pressed" recolor_opa="#opa_muted" recolor="#theme_structure5" />
		<style name="style_focused" />
	</styles>
	<view extends="lv_button">
		<remove_style_all />
		<style name="style_base" />
		<style name="style_pressed" selector="pressed" />
		<style name="style_focused" selector="focused" />
		<lv_label text="$label" align="center" style_text_align="center" long_mode="scroll_circular" />
	</view>
</component>
