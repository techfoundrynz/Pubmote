<component>
	<previews>
		<preview style_pad_all="4" style_bg_color="0x000000" />
	</previews>
	<api>
		<prop name="label" type="string" default="Label" />
	</api>
	<styles>
		<style
			name="style_base"
			bg_opa="100%"
			width="100%"
			bg_color="#theme_bg"
			border_width="3px"
			border_color="#theme_structure5"
			text_color="#theme_text"
		/>
		<style name="style_pressed" recolor_opa="#opa_muted" recolor="#theme_structure5" />
	</styles>
	<view extends="button">
		<style name="style_base" />
		<style name="style_pressed" selector="pressed" />
	</view>
</component>
