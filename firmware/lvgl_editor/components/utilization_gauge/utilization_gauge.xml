<component>
	<api>
		<prop name="bind_duty_cycle" type="subject" />
		<prop name="bind_vehicle_state" type="subject" />
	</api>
	<consts>
		<px name="thickness" value="24px" />
	</consts>
	<previews>
		<preview style_pad_all="20" style_bg_color="0x000000" />
	</previews>
	<styles>
		<style
			name="style_main"
			arc_width="#thickness"
			arc_color="0x878787"
			width="100%"
			height="100%"
			arc_rounded="true"
		/>
		<style name="style_indicator" arc_color="#settings_theme_color" arc_width="#thickness" arc_rounded="true" />
		<style name="style_indicator_warn" arc_color="#theme_warn" />
		<style name="style_indicator_danger" arc_color="#theme_danger" />
		<style name="style_indicator_critical" arc_color="#theme_critical" />
		<style name="style_knob" opa="0%" />
	</styles>
	<view
		extends="lv_arc"
		min_value="0"
		start_angle="120"
		end_angle="60"
		disabled="true"
		max_value="100"
		mode="reverse"
		bind_value="$bind_duty_cycle"
	>
		<style name="style_main" />
		<style name="style_knob" selector="knob" />
		<style name="style_indicator" selector="indicator" />
		<bind_style
			subject="$bind_vehicle_state"
			selector="indicator"
			name="style_indicator_warn"
			ref_value="#vehicle_state_warn"
		/>
		<bind_style
			subject="$bind_vehicle_state"
			selector="indicator"
			name="style_indicator_danger"
			ref_value="#vehicle_state_danger"
		/>
		<bind_style
			subject="$bind_vehicle_state"
			selector="indicator"
			name="style_indicator_critical"
			ref_value="#vehicle_state_critical"
		/>
	</view>
</component>
