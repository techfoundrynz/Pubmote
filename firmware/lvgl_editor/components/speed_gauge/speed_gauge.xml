<component>
	<api>
		<prop name="bind_speed" type="subject" />
		<prop name="bind_max_speed" type="subject" />
	</api>
	<consts>
		<px name="thickness" value="32px" />
	</consts>
	<previews>
		<preview style_pad_all="20" style_bg_color="0x000000" />
	</previews>
	<styles>
		<style
			name="style_main"
			arc_width="#thickness"
			arc_color="#theme_structure3"
			width="100%"
			height="100%"
			arc_rounded="true"
		/>
		<style name="style_indicator" arc_color="#settings_theme_color" arc_width="#thickness" arc_rounded="true" />
		<style name="style_knob" opa="0%" />
	</styles>
	<view
		extends="dynamic_range_arc"
		min_value="0"
		start_angle="120"
		end_angle="60"
		disabled="true"
		bind_value="$bind_speed"
		bind_max_value="$bind_max_speed"
		clickable="false"
	>
		<style name="style_main" />
		<style name="style_knob" selector="knob" />
		<style name="style_indicator" selector="indicator" />
	</view>
</component>
